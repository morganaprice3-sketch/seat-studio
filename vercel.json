{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/todo", "destination": "/todo.html" },
    { "source": "/todo/", "destination": "/todo.html" },
    { "source": "/todo.html", "destination": "/todo.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}
